@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <h2>Submit New Claim</h2>
    <form>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Hours Worked</label>
            <input type="number" class="form-control" placeholder="Enter hours" />
        </div>
        <div class="mb-3">
            <label class="form-label">Hourly Rate</label>
            <input type="number" class="form-control" placeholder="Auto-filled / Enter rate" />
        </div>
        <div class="mb-3">
            <label class="form-label">Total</label>
            <input type="number" class="form-control" placeholder="Calculated total" disabled />
        </div>
        <button type="submit" class="btn btn-primary">Submit Claim</button>
        <a href="/Claims/Dashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>
